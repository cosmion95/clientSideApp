<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <Button
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:id="@+id/user_back_button"
            android:text="bk"
            android:textSize="10dp" />


        <TextView
            android:id="@+id/username_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_toRightOf="@id/user_back_button" />


        <ListView
            android:id="@+id/user_messages_list"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_below="@id/username_text_view" />


        <EditText
            android:id="@+id/user_text_message"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Your message here"
            android:layout_below="@id/user_messages_list" />

        <Button
            android:id="@+id/user_send_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEND"
            android:layout_below="@id/user_text_message" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>